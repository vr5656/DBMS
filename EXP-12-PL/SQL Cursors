SELECT customer_name 
FROM loan 
JOIN account 
ON loans.customer_id = accounts.customer_id 
GROUP BY customer_name 
HAVING COUNT(DISTINCT loans.loan_id) > 0 AND COUNT(DISTINCT accounts.account_id) > 0;

