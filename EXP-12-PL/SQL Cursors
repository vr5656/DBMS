SELECT DISTINCT b.customer_name 
FROM borrower b 
JOIN loan l ON b.loan_number = l.loan_number 
WHERE NOT EXISTS ( 
  SELECT * 
  FROM depositor d 
  WHERE d.customer_name = b.customer_name 
);

