select  
    "EMPNO", 
    "ENAME", 
    "JOB", 
    "MGR", 
    "HIREDATE", 
    "SAL", 
    "COMM", 
    "DEPTNO" 
from "EMP";

SELECT name AS "Name", salary * 12 AS "Annual Salary" 
FROM emp 
;

SELECT ename AS "Name", sal * 12 AS "Annual Salary" 
FROM emp 
;

  	SELECT CONCAT(ename, ' - ', job) AS "Name and Designation" 
FROM emp 
	  
;

  	SELECT CONCAT(ename, job) AS "Name and Designation" 
FROM emp 
	  
;

SELECT ename 
FROM emp 
WHERE job = 'Clerk' 
;

SELECT ename 
FROM emp 
WHERE job = 'CLERK' 
;

SELECT * 
FROM emp 
WHERE hiredate < '1981-09-30' 
;

SELECT * 
FROM emp 
WHERE hiredate < '30-SEP-81' 
 
;

SELECT ename 
FROM emp 
WHERE empno IN (7369, 7839, 7934, 7788) 
;

SELECT ename 
FROM emp 
WHERE job <> 'MANAGER' 
;

SELECT ename 
FROM emp 
WHERE deptno NOT IN (10, 30, 40) 
;

SELECT ename 
FROM emp 
WHERE hiredate BETWEEN '30-JUN-81' AND '31-DEC-81' 
;

SELECT DISTINCT job 
FROM emp 
;

SELECT ename 
FROM emp 
WHERE comm IS NULL 
;

SELECT ename, job 
FROM emp 
WHERE MGR IS NULL 
;

SELECT ename 
FROM emp 
WHERE deptno IS NULL 
 
;

SELECT ename 
FROM emp 
WHERE comm IS NOT NULL 
;

SELECT ename 
FROM emp 
WHERE name LIKE 's%' OR name LIKE '%s' 
 
;

SELECT ename 
FROM emp 
WHERE ename LIKE 's%' OR ename LIKE '%s' 
 
;

SELECT ename 
FROM emp 
WHERE ename LIKE 'S%' OR ename LIKE '%S' 
 
;

SELECT ename AS ename, job, deptno, hiredate 
FROM emp 
ORDER BY hiredate ASC 
 
;

SELECT empno, ename, job 
FROM emp 
ORDER BY sal * 12 DESC;

